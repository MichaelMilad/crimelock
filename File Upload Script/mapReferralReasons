(
    $referral:= false;
    $reasons:= [];

    (applicant.crimelock.lossPayees) ?
      $reasons:= $append($reasons, 
          "Request Referred because a Loss Payee(s) were added"
        );

    (
        riskDetails.crimelock.SOF_1 = false
        or riskDetails.crimelock.SOF_2 = false
        or riskDetails.crimelock.SOF_3 = false
        or riskDetails.crimelock.SOF_4 = false
        or riskDetails.crimelock.SOF_5 = false
        or riskDetails.crimelock.SOF_6 = false
        or riskDetails.crimelock.SOF_7 = false
        or riskDetails.crimelock.SOF_8 = false
        or riskDetails.crimelock.SOF_9 = false
        or riskDetails.crimelock.SOF_10 = false
        or riskDetails.crimelock.SOF_11 = false
        or riskDetails.crimelock.SOF_12 = false
        or riskDetails.crimelock.SOF_13 = false
        or riskDetails.crimelock.SOF_14 = false
        or riskDetails.crimelock.SOF_15 = false
        or riskDetails.crimelock.SOF_16 = false
        or riskDetails.crimelock.SOF_17 = false
    ) ? $reasons:= $append($reasons,
            "Request Referred because of one or more SOF Question answered with NO"
            );

    applicant.crimelock.hasEmployeesOutside ?
            $reasons:= $append($reasons,
                "Request Referred because there are some remote employees"
            );

    (applicant.crimelock.periodFrom < $now('[Y0001]-[M01]-[D01]')) ? 
            $reasons:= $append($reasons,
                "Request Referred because of Backdated Inception Date"
            );

    applicant.crimelock.lossPayees ?
            $reasons:= $append($reasons, 
                "Request Referred because of Adding Loss Payees"
            );

    $count($reasons) > 0 ? $referral:= true;

    {
        "status": ($referral ? "referred" : underwriter.status),
        "reasons": $reasons
    }
)