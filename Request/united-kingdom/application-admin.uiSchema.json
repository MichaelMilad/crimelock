        {
          "key": "assistant",
          "data": {
            "label": "Current Revenue",
            "description": "Request will be declined for the current revenue",
            "field": "applicant.crimelock.currentRevenue"
          }
        }
      ]
    },
    {
      "if": {
        ">": [{ "var": "applicant.crimelock.numberOfEmployees" }, 5000]
      },
      "then": [
        {
          "key": "assistant",
          "data": {
            "label": "Number Of Employees",
            "description": "Request will be declined for the current number of employees",
            "field": "applicant.crimelock.numberOfEmployees"
          }
        }
      ]
    },
    {
      "if": {
        "or": [
          { "==": [{ "var": "riskDetails.crimelock.SOF_1" }, false] },
          { "==": [{ "var": "riskDetails.crimelock.SOF_2" }, false] },
          { "==": [{ "var": "riskDetails.crimelock.SOF_3" }, false] },
          { "==": [{ "var": "riskDetails.crimelock.SOF_4" }, false] },
